<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/diet"
      android:layout_marginTop="20dp"
      android:orientation="vertical"
      android:layout_gravity="center">

    <TextView
        android:id="@+id/diet"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:text="   Dnyanshree Institute of Engineering "
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diet"
        android:layout_alignEnd="@+id/diet"
        android:layout_alignBottom="@+id/diet"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="and Technology, Satara"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/dbimg1"
        android:src="@drawable/diet_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"/>



    <ImageView
        android:id="@+id/dbimg2"
        android:src="@drawable/programs"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/dbimg3"
        android:src="@drawable/about_us"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/dbimg4"
        android:src="@drawable/staff"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>
  </LinearLayout>
