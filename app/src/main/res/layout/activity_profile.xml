<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity"
    android:background="#B4D5CFD2">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="250dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/user_img1"
            android:layout_centerInParent="true"
            android:background="@drawable/no_profile_img"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textview_show_welcome"
              android:layout_below="@+id/user_img1"
              android:hint="Loading..."
              android:layout_marginTop="5dp"
              android:textAppearance="@style/TextAppearance.AppCompat.Headline"
              android:textColor="@color/white"
              android:textColorHint="@color/white"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="15dp"
          android:layout_margin="15dp"
          android:background="@color/white">

          <TextView
              android:id="@+id/show_fullname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="50dp"
              android:drawableLeft="@drawable/baseline_name_24"
              android:drawablePadding="15dp"
              android:hint="Loading...."
              android:textSize="18dp" />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="20dp"
              android:background="@color/white"
              android:id="@+id/divider_name"/>



          <TextView
              android:id="@+id/show_phn_no"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="50dp"
              android:drawableLeft="@drawable/baseline_phone_24"
              android:drawablePadding="15dp"
              android:layout_below="@id/divider_name"
              android:layout_marginTop="15dp"
              android:hint="Loading...."
              android:textSize="18dp" />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="10dp"
              android:layout_below="@id/show_phn_no"
              android:background="@color/white"
              android:id="@+id/divider_phn_no"/>

          <TextView
              android:id="@+id/show_email"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="50dp"
              android:drawableLeft="@drawable/baseline_email_24"
              android:drawablePadding="15dp"
              android:layout_below="@id/divider_phn_no"
              android:layout_marginTop="0dp"
              android:hint="Loading...."
              android:textSize="18dp" />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="20dp"
              android:layout_below="@id/show_email"
              android:background="@color/white"
              android:id="@+id/divider_email"/>


      </RelativeLayout>

</LinearLayout>

  </ScrollView>