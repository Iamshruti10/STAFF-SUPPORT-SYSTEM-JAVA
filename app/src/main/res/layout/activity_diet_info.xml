<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Diet_info">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view">
    </View>



    <TextView
        android:id="@+id/att_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Concept to Completion: Unraveling Dynamics"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/concept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Concept:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/concept_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/concept"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:text="This application has 1st module attendance system in which staff members
can take daily attendance of students in each class.We can generate the
attendance in pdf format by doing monthly calculations."
        android:textColor="@color/black"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/concept_view"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:text="How does the Attend system works?:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/step1_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/steps"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:text="Step 1 -Enter into the attendancesystem
                            Step 2 - Create a class with class name and subject name by clicking on the
 add button                                  Step 3 - Enter the class and click on the right side tool bar"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/step2_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step1_view"
        android:layout_marginLeft="35dp"
        android:text="Step 4 - Click on the Add Student option and enter the roll number and
student name to create students in the class.Up to this point, the process
has to be done once and there is no need to repeat it"
        android:textColor="@color/black"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/step3_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step2_view"
        android:layout_marginLeft="35dp"
        android:text="Step 5- When the professor wants to take attendance of the class, they can
call each studentâ€™s roll number or name and click Absent Present.
                                 Step 6 - After that, the attendance of that day must be save by clicking on
save button hence it will be added in the monthly report sheet"
        android:textColor="@color/black"
        android:textSize="15dp"
        />




</RelativeLayout>

